{
  "root": true,
  "extends": ["taro/react", "eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "indent": ["error", 4],
    // 行尾使用分号
    "semi": ["error", "always"],
    "prettier/prettier": "error",
    "no-extra-semi": "off",
    "no-undef": 2,
    "selector-class-pattern": "off",
    "selector-id-pattern": "off",
    "declaration-block-no-redundant-longhand-properties": "off",
    "media-feature-name-no-unknown": "off",
    "@typescript-eslint/no-unused-expressions": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "endOfLine": "off",
    "import/no-unresolved": "warn", // 需要去掉
    "react/no-deprecated": "warn", // 需要去掉
    "react/jsx-key": "warn" // 需要去掉
  },
  "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
          "tsx": true
      }
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "overrides": [
        {
            "files": ["*.tsx", "*.jsx"],
            "rules": {
                "react/jsx-indent": ["error", 4],
                "react/jsx-indent-props": ["error", 4]
            }
        }
    ]
}
